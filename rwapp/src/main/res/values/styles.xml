<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.Shadow">
        <item name="android:shadowColor">#88000000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="AppTheme.Shadow.HeaderText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Shadow.ListenTitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.Shadow.SpeakTitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.SubmittedText">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.OverlayText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.FeedbackButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Shadow.BlueButton">
        <item name="android:textColor">@color/blue_button_text</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.Shadow.NavButton">
        <item name="android:textColor">@color/nav_button_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Shadow.ActionButton">
        <item name="android:textColor">@color/action_button_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Shadow.ListenLargeButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Shadow.ListenSmallButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Shadow.SpeakLargeButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Shadow.SpeakSmallButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleBar"/>

    <style name="TitleBar.Text" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleBar.Button">
        <item name="android:background">@drawable/action_button</item>
        <item name="android:textColor">@color/action_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Text" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Large" parent="Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
